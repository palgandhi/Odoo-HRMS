<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Employee Form View Extension -->
    <record id="view_employee_form_extended" model="ir.ui.view">
        <field name="name">hr.employee.form.extended</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add Employee Code after name -->
            <field name="name" position="after">
                <field name="employee_code" readonly="1"/>
            </field>

            <!-- Add new notebook page for Extended Information -->
            <xpath expr="//notebook" position="inside">
                <page string="Employment Details" name="employment_details">
                    <group>
                        <group string="Employment Information">
                            <field name="date_of_joining"/>
                            <field name="employment_status"/>
                            <field name="probation_period"/>
                            <field name="confirmation_date"/>
                            <field name="notice_period"/>
                        </group>
                        <group string="Salary Information">
                            <field name="basic_salary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </page>

                <page string="Personal Details" name="personal_details">
                    <group>
                        <group string="Emergency Contact">
                            <field name="emergency_contact"/>
                            <field name="emergency_contact_phone"/>
                            <field name="blood_group"/>
                        </group>
                        <group string="Education & Skills">
                            <field name="qualification"/>
                            <field name="skills" widget="text"/>
                            <field name="certifications" widget="text"/>
                        </group>
                    </group>
                </page>

                <page string="Performance" name="performance">
                    <group>
                        <field name="performance_count"/>
                        <button name="action_view_performance_reviews" 
                                type="object" 
                                string="View Performance Reviews"
                                class="oe_stat_button"
                                icon="fa-star"/>
                    </group>
                    <field name="performance_review_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="review_date"/>
                            <field name="review_period"/>
                            <field name="overall_rating"/>
                            <field name="rating_category"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Employee Tree View Extension -->
    <record id="view_employee_tree_extended" model="ir.ui.view">
        <field name="name">hr.employee.tree.extended</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="employee_code"/>
                <field name="employment_status"/>
                <field name="date_of_joining"/>
            </field>
        </field>
    </record>

    <!-- Employee Search View Extension -->
    <record id="view_employee_filter_extended" model="ir.ui.view">
        <field name="name">hr.employee.search.extended</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <filter name="inactive" position="after">
                <separator/>
                <filter string="Probation" name="probation" 
                        domain="[('employment_status', '=', 'probation')]"/>
                <filter string="Confirmed" name="confirmed" 
                        domain="[('employment_status', '=', 'confirmed')]"/>
                <filter string="Notice Period" name="notice" 
                        domain="[('employment_status', '=', 'notice')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employment Status" name="group_employment_status" 
                            context="{'group_by': 'employment_status'}"/>
                    <filter string="Date of Joining" name="group_joining_date" 
                            context="{'group_by': 'date_of_joining'}"/>
                </group>
            </filter>
        </field>
    </record>

    <!-- Employee Action -->
    <record id="action_employee_extended" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new employee
            </p>
            <p>
                Manage your employees and their information.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_employee_all"
              name="All Employees"
              parent="menu_dayflow_employee"
              action="action_employee_extended"
              sequence="10"/>
</odoo>
